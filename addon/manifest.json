{
  "name": "The Impulsive Philanthropist", 
  "description": "This addon reminds you to donate when making purchases",  
  "name": "URL Redirect",
  "version": "0.2",
  "description": "Checks URL and redirects as required.",
   "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
   "manifest_version": 2,
   "content_scripts": [
   {
    "matches": ["http://*/*", "https://*/*"],
    "js": ["jquery-2.1.3.min.js", "bootstrap.min.js", "jquery.fancybox.pack.js", "content.js"],
    "css": ["bootstrap.min.js", "bootstrap.min.css", "jquery.fancybox.css"]
   }
   ]
