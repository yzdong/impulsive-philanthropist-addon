
{
  "name": "The Impulsive Philanthropist", 
  "description": "This addon reminds you to donate when making purchases",  
  "name": "URL Redirect",
  "version": "0.2",
  "description": "Checks URL and redirects as required.",
   "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "options.html"
    },
   "manifest_version": 2,
   "content_scripts": [
   {
    "matches": ["https://www.zalora.sg/checkout/finish/", "https://www.amazon.com/gp/buy/*", "https://*/*"],
    "js": ["jquery-2.1.3.min.js", "bootstrap.min.js", "jquery.fancybox.pack.js", "braintree.js", "content.js"],
    "css": ["bootstrap.min.js", "bootstrap.min.css", "jquery.fancybox.css", "card.css", "polaroid.css"]
   }
   ],
   "permissions": [
    "<all_urls>"
   ], 
   "externally_connectable": {
    "matches": ["http://localhost:4567/*"]
    }, 
    "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
    "options_ui": {
    // Required.
    "page": "options.html",
    // Recommended.
    "chrome_style": true,
    // Not recommended; only provided for backwards compatibility,
    // and will be unsupported in a future version of Chrome (TBD).
    "open_in_tab": true
  }

}

